                    <!-- حقل الاسم الكامل -->
                    <div class="form-group">
                        <input type="text" id="name" name="name" placeholder="الاسم الكامل" required>
                    </div>
                    <!-- حقل البريد الإلكتروني -->
                    <div class="form-group">
                        <input type="email" id="email" name="email" placeholder="البريد الإلكتروني" required>
                    </div>
                    <!-- حقل الرسالة -->
                    <div class="form-group">
                        <textarea id="message" name="message" rows="4" placeholder="اكتب رسالتك هنا..." required></textarea>
                    </div>
                    <!-- زر إرسال النموذج -->
                    <button type="submit" class="login-button">إرسال</button>
                </form>
                <!-- خيارات التواصل البديلة -->
                <div class="options">
                    <span>أو تواصل معنا عبر:</span>
